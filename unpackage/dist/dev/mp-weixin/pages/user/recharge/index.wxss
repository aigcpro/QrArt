rich-text {
  font-size: 24rpx;
  color: #f4f4f5;
  line-height: 64rpx;
}
.block {
  width: 100%;
  background-color: #2B2D30;
  position: relative;
  top: -50rpx;
  left: 0rpx;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}
.block .tool {
  margin-bottom: 15rpx;
  padding: 30rpx;
}
.block .tool .share {
  display: flex;
  flex-direction: column;
}
.block .tool .share .item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  border: 1rpx solid #f4f4f5;
  border-radius: 10rpx;
  padding: 15rpx;
}
.block .tool .share .item .icon {
  width: 15%;
}
.block .tool .share .item .btn {
  width: 25%;
}
.block .tool .share .item .content {
  width: 60%;
}
.block .tool .share .item .content .title {
  font-weight: bolder;
  font-size: 32rpx;
}
.block .tool .share .item .content .desc {
  color: #82848a;
  font-weight: bolder;
  margin: 10rpx 0rpx;
  font-size: 24rpx;
}
.block .tool .share .item .content .speed {
  color: #3975FB;
}
.block .tool .remarks {
  margin-top: 15rpx;
}
.block .tool .submit {
  margin-top: 30rpx;
}
.block .tool .head {
  display: flex;
  flex-direction: row;
}
.block .tool .head .title {
  font-size: 32rpx;
  color: #f4f4f5;
  margin-left: 15rpx;
}
.block .tool .plan {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}
.block .tool .plan .item {
  width: 30%;
  border: 2rpx solid #d8d8d8;
  text-align: center;
  margin: 15rpx 0rpx;
  padding: 20rpx 0rpx;
  border-radius: 12rpx;
  position: relative;
}
.block .tool .plan .item .badge {
  position: absolute;
  right: -20rpx;
  top: -15rpx;
}
.block .tool .plan .item .number {
  color: #3b75fa;
  font-size: 36rpx;
  font-weight: bolder;
}
.block .tool .plan .item .price {
  color: #fa3534;
  font-size: 28rpx;
  margin-top: 15rpx;
}
.block .tool .plan .item .plan_name {
  color: #666666;
  font-weight: bolder;
}
.block .tool .plan .active {
  border: 2rpx solid #5286fe !important;
}
.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 80rpx 40rpx;
  z-index: 999;
  position: relative;
}
.header .left {
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.header .left .text {
  font-size: 32rpx;
  margin-bottom: 15rpx;
}
.header .left .number {
  font-size: 48rpx;
  font-weight: bolder;
}
.header .right .u-button {
  border-radius: 40rpx !important;
}
.header .right .u-button__text {
  color: #5968f9 !important;
}

