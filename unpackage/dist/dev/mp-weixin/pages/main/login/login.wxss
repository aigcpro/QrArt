page {
  background-color: #fff;
}
.modal .user {
  width: 86%;
  margin: 0 auto;
  padding: 30rpx 0rpx;
}
.modal .user .info .placeholder {
  color: red;
  font-size: 28rpx;
}
.modal .user .info .u-cell__body {
  padding: 30rpx !important;
}
.modal .user .start {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 50rpx;
}
.modal .user .start .btn {
  width: 40%;
  margin: 0rpx 15rpx;
}
.modal .user .start .btn .u-button {
  height: 92rpx;
}
.modal .user .start .refuse .u-button {
  color: #19be6b !important;
}
.modal .user .remarks {
  margin: 50rpx 0rpx;
}
.modal .user .remarks .title {
  font-size: 32rpx;
  font-weight: bold;
}
.modal .user .remarks .desc {
  color: #909399;
  margin-top: 15rpx;
}
.modal .user .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.modal .user .header .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.modal .user .header .left .title {
  margin-left: 15rpx;
  color: #303133;
}
.brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 320rpx;
}
.brand .content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.brand .content .title {
  font-size: 42rpx;
  font-weight: bolder;
  margin: 30rpx 0rpx;
  color: #303133;
}
.brand .content .small {
  font-size: 28rpx;
  color: #bababa;
}
.form {
  width: 80%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.form .tips {
  margin: 30rpx 0rpx;
  color: #909399;
  font-size: 24rpx;
}
.form .btn-group {
  width: 100%;
}
.form .btn-group .btn {
  margin-bottom: 15rpx;
}
.form .btn-group .btn .u-button {
  height: 100rpx;
}
/* 版权 */
.copyright {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.copyright .text {
  font-size: 20rpx;
  color: #bababa;
}
.copyright .link {
  margin-top: 30rpx;
}
.copyright .link .a {
  color: blue;
}

