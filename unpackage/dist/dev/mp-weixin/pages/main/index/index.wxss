page {
  padding-bottom: 320rpx;
}
.user {
  position: relative;
}
.user .box .user {
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 140rpx;
  margin-bottom: 40rpx;
}
.user .box .user .nickname {
  margin: 20rpx 0rpx;
}
.user .box .service-qrcode {
  width: 100%;
  position: absolute;
  bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user .box .service-qrcode .text {
  margin-top: 30rpx;
}
.user .box .menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0rpx 30rpx;
}
.user .box .menu .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 25rpx 0rpx;
}
.user .box .menu .item .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 80rpx;
}
.user .box .menu .item .left .title {
  font-size: 32rpx;
  margin-left: 10rpx;
}
.panel {
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.panel .item {
  margin-bottom: 30rpx;
}
.panel .item .prompt .u-textarea {
  height: 160rpx !important;
  background-color: #383A41 !important;
  border: none !important;
}
.panel .item .art-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.panel .item .art-box .slider {
  width: 60%;
}
.panel .item .art-box slider {
  margin: 10rpx !important;
}
.panel .item .style-qrcode {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.panel .item .style-qrcode .pic {
  display: flex;
  flex-direction: column;
  width: 20%;
  margin: 10rpx 5rpx;
  border: 2rpx solid #383A41;
  padding: 10rpx;
  border-radius: 10rpx;
}
.panel .item .style-qrcode .pic .bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  font-size: 24rpx;
}
.panel .item .style-qrcode .active {
  border: 2rpx solid #3975FB;
}
.panel .item .fill-qrcode .text-mode .u-textarea {
  height: 260rpx !important;
  background-color: #383A41 !important;
  border: none !important;
}
.panel .item .title {
  margin-bottom: 30rpx;
}
.panel .item .tabs .u-subsection {
  height: 80rpx !important;
}
.panel .item .tabs .u-subsection .u-subsection__bar {
  height: 80rpx !important;
}
.bottom-action {
  width: 100%;
  position: fixed;
  padding-bottom: 60rpx;
  padding-top: 15rpx;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  z-index: 998;
  background-color: #2B2D30;
}
.bottom-action .btn-normal {
  width: 25%;
}
.bottom-action .submit {
  width: 60%;
}
.bottom-action .submit .u-button {
  height: 90rpx !important;
}
.bottom-action .reset {
  margin-left: 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bottom-action .reset .icon {
  margin-right: 10rpx;
}
.modal .user {
  width: 86%;
  margin: 0 auto;
  padding: 30rpx 0rpx;
}
.modal .user .info .placeholder {
  color: red;
  font-size: 28rpx;
}
.modal .user .info .u-cell__body {
  padding: 30rpx !important;
}
.modal .user .start {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 50rpx;
}
.modal .user .start .btn {
  width: 40%;
  margin: 0rpx 15rpx;
}
.modal .user .start .btn .u-button {
  height: 92rpx;
}
.modal .user .start .refuse .u-button {
  color: #19be6b !important;
}
.modal .user .remarks {
  margin: 50rpx 0rpx;
}
.modal .user .remarks .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #c8c9cc;
}
.modal .user .remarks .desc {
  color: #82848a;
  margin-top: 15rpx;
}
.modal .user .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.modal .user .header .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.modal .user .header .left .title {
  margin-left: 15rpx;
  color: #303133;
}
.mark .overlay-warp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  z-index: 9999;
}
.mark .overlay-warp .warp {
  width: 480rpx;
  height: 365rpx;
  background-image: url("https://img.alicdn.com/imgextra/i1/2064565174/O1CN01ykrIWT1o5k0tHmyAZ_!!2064565174.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.mark .overlay-warp .warp .submit {
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.mark .overlay-warp .warp .submit .link {
  text-align: center;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #dd6161;
}
.mark .overlay-warp .warp .input {
  width: 80%;
  margin: 0 auto;
  margin-top: 80rpx;
  z-index: 999;
  border: 1rpx solid #f4f4f4;
  padding: 15rpx;
  border-radius: 5rpx;
}
.mark .overlay-warp .warp .input input {
  font-size: 28rpx;
  color: #666;
  border-radius: 15rpx;
}
.mark .overlay-warp .warp .close {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
  padding-top: 15rpx;
}
.mark .overlay-warp .warp .close .icon {
  margin-right: 15rpx;
}

